{
  "id": "charge_time_period",
  "title": {
    "en": "Set period for charging"
  },
  "args": [
    {
      "name": "device",
      "type": "device",
      "filter": "driver_id=Tesla"
    },
    {
      "name": "charge_start",
      "type": "time",
      "title": {
        "en": "Charge start"
      },
      "placeholder": {
        "en": "22:00"
      }
    },
    {
      "name": "charge_end",
      "type": "time",
      "title": {
        "en": "Charge end"
      },
      "placeholder": {
        "en": "06:30"
      }
    },
    {
      "name": "charge_max_hours",
      "type": "range",
      "min": 1,
      "max": 24,
      "step": 0.5,
      "label": "h",
      "labelDecimals": 1,
      "title": {
        "en": "Charge hours per period"
      }
    }
  ]
}